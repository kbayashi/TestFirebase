<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileEditRadioButtonActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/activity_user_profile_edit_radio_button_man_radioButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="男性"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/activity_user_profile_edit_radio_button_woman_radioButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="女性"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/activity_user_profile_edit_radio_button_save_button"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="保存"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>