<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileEditActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="200dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@+id/scrollView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_camera_alt_24" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="598dp"
        android:layout_height="821dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_profile_edit_imageview"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/user_profile_edit_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_pr_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_gender_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_old_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_prefectures_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_hobby_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_sick_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/user_profile_edit_lifeexpectancy_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="45sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>