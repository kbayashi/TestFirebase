<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/time_line_comment_row_circleImageView"
        android:layout_width="60dp"

        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_line_comment_row_textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/time_line_comment_row_circleImageView"
        app:layout_constraintStart_toEndOf="@+id/time_line_comment_row_circleImageView"
        app:layout_constraintTop_toTopOf="@+id/time_line_comment_row_circleImageView"
        tools:text="すごい！！かっこいい" />

    <TextView
        android:id="@+id/time_line_comment_row_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_line_comment_row_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_line_comment_row_textView"
        tools:text="10月11日1時10分" />

    <TextView
        android:id="@+id/time_line_comment_row_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/time_line_comment_row_circleImageView"
        app:layout_constraintStart_toStartOf="@+id/time_line_comment_row_circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/time_line_comment_row_circleImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>