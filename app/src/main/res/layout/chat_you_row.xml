<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <Button
        android:id="@+id/chat_you_row_msg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round_you"
        android:padding="15dp"
        android:text="相手のメッセージです"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintTop_toTopOf="@+id/chat_you_row_pic_imageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_you_row_pic_imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/chat_you_row_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01 12:34"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintStart_toStartOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintTop_toBottomOf="@+id/chat_you_row_pic_imageView" />

    <ImageView
        android:id="@+id/chat_you_row_imgSrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_you_row_time_textView"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>