<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <Button
        android:id="@+id/chat_you_row_msg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_round_you"
        android:maxEms="20"
        android:padding="10dp"
        android:text="ECCコンピュータ専門学校"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_you_row_pic_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/chat_you_row_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintStart_toStartOf="@+id/chat_you_row_pic_imageView"
        app:layout_constraintTop_toBottomOf="@+id/chat_you_row_pic_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>